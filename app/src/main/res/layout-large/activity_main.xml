<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/background"
    android:orientation="vertical">


    <Button
        android:id="@+id/sq"
        android:layout_width="213dp"
        android:layout_height="68dp"
        android:layout_marginTop="440dp"
        android:background="@drawable/button_state"
        android:text="@string/Sq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <Button
        android:id="@+id/tq"
        android:layout_width="213dp"
        android:layout_height="68dp"

        android:layout_marginTop="508dp"
        android:background="@drawable/button_state"
        android:text="@string/tq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/sq"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <Button
        android:id="@+id/RA"
        android:layout_width="213dp"
        android:layout_height="68dp"
        android:layout_marginBottom="176dp"
        android:background="@drawable/button_state"
        android:text="@string/RA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/OA"
        android:layout_width="213dp"
        android:layout_height="68dp"
        android:background="@drawable/button_state"
        android:text="@string/OA"
        app:layout_constraintBottom_toTopOf="@+id/RA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tq"
        app:layout_constraintVertical_bias="0.922" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="432dp"
        android:layout_height="329dp"
        android:background="@drawable/shawdow_layout"
        android:elevation="2dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="60dp"
            android:elevation="25dp"
            android:paddingLeft="15dp"
            android:src="@drawable/icon_launcher_back"

            />

        <TextView
            android:id="@+id/editText"
            android:layout_width="111dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="150dp"

            android:elevation="25dp"

            android:gravity="center_horizontal"
            android:inputType="textPersonName"
            android:text="@string/Welcome"
            android:textColor="#193300"
            android:textSize="25sp"
            android:typeface="sans" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Android"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.363" />
</androidx.constraintlayout.widget.ConstraintLayout>
